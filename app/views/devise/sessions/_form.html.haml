- title "Log In"
.page-header.record
  %h2 Log In to Macquarie Papyri
  %small Please enter your email (or One ID if you have one) and password to log in
.page-content
  .control-group
    = f.label :login_attribute, 'Login', :class => "control-label"
    .controls
      = f.text_field :login_attribute
  .control-group
    = f.label :password, :class => "control-label"
    .controls
      = f.password_field :password
  .form-actions
    = f.submit "Log in", :class => "btn"
    = link_to "Forgot your password?", new_user_password_path, :class => "btn"
  .form-actions
    %small Contact #{APP_CONFIG['account_contact']} for an account.

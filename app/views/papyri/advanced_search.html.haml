.page-inner
  .page-header.record
    %h2 Advanced Search
  .page-content
    = form_tag advanced_search_papyri_path, method: :get do

      = render_field('Inventory Number', search_field_tag(:inventory_number, @search_fields[:inventory_number], maxlength: 50))
      = render_field('General Note', search_field_tag(:general_note,  @search_fields[:general_note], maxlength: 50))
      = render_field('Lines of Text', search_field_tag(:lines_of_text,  @search_fields[:lines_of_text], maxlength: 50))
      = render_field('Paleographic Description', search_field_tag(:paleographic_description, @search_fields[:paleographic_description], maxlength: 50))
      = render_field('Recto Verso Note', search_field_tag(:recto_verso_note, @search_fields[:recto_verso_note], maxlength: 50))
      = render_field('Origin Details', search_field_tag(:origin_details, @search_fields[:origin_details], maxlength: 50))
      = render_field('Source of Acquisition', search_field_tag(:source_of_acquisition, @search_fields[:source_of_acquisition], maxlength: 50))
      = render_field('Preservation Note', search_field_tag(:preservation_note, @search_fields[:preservation_note], maxlength: 50))
      = render_field('Language Note', search_field_tag(:language_note, @search_fields[:language_note], maxlength: 50))
      = render_field('Summary', search_field_tag(:summary, @search_fields[:summary], maxlength: 50))
      = render_field('Original Text', search_field_tag(:original_text, @search_fields[:original_text], maxlength: 50))
      = render_field('Translated Text', search_field_tag(:translated_text, @search_fields[:translated_text], maxlength: 50))
      .form-actions
        = submit_tag 'Search', class: "btn btn-blue"
    -if @papyri.empty?
      -if @with_params
        No Results Found
    -else
      %h1 Search Results
      = render partial: 'table', locals: {table_id: 'search_results', papyri: @papyri}
      %br
      = will_paginate @papyri


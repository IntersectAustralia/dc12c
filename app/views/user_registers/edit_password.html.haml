.page-inner
  - title 'User Profile'
  .page-header
    %h2 Change Password
  .page-content
    = form_for(resource, :as => resource_name, :url => users_update_password_path, :html => { :method => :put }) do |f|
      = render "shared/error_messages", :target => @user
      .control-group
        = f.label :current_password, "Current password:", class: "control-label"
        .controls
          = f.password_field :current_password
        %p.details We need your current password for confirmation
      .control-group
        = f.label :password, "New password:", class: "control-label"
        .controls
          = f.password_field :password
          = required
      .control-group
        = f.label :password_confirmation, "Confirm new password:", class: "control-label"
        .controls
          = f.password_field :password_confirmation
          = required
      .form-actions
        = f.submit "Update", :class => "btn btn-blue"
        = link_to 'Cancel', users_profile_path, :class => "btn"
